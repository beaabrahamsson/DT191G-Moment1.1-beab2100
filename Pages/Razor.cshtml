@page
@model Moment1._1.Pages.RazorModel
@{
	ViewData["Titel"] = "Razor";

	var date = DateTime.Now;

	var day = DateTime.Now.ToString("dddd", new System.Globalization.CultureInfo("sv-SE"));

	string[] courses = { "DT057G, Webbutveckling I", "DT084G, Introduktion till programmering i JavaScript", "DT163G, Digital bildbehandling för webb", "DT068G, Webbanvändbarhet", "DT093G, Webbutveckling II", "DT003G, Databaser", "DT173G, Webbutveckling III", "DT197G, Webbdesign för CMS", "IK060G, Projektledning", "DT193G, Fullstack-utveckling med ramverk", "DT162G, Javascriptbaserad webbutveckling", "DT071G, Programmering i C#.NET" };

}

<h1>Razor</h1>

<h2>Information</h2>

<p><b>Datum/klockslag:</b> @date</p>

@if (day == "måndag")
{
	<p>Idag är det @day!</p>
}
else
{
	<p>Idag är det inte måndag.</p>
}

<h3>Kurser jag läst</h3>
@foreach (var course in courses)
{
	<ul><li>@course</li></ul>
}
